String input;
int lamp = 13;
void setup() {
  Serial.begin(9600);
  pinMode(lamp,OUTPUT);
}

void loop() {
  if(Serial.available() > 0) {
    input = Serial.readString();
    char thing = input[0];
    char mode = input[1];
    switch(thing){
      case 'L' : setMode(lamp, mode);break;
    }
  }
}

void setMode(int thing, char mode) {
  String state;
  if (mode == '1') {
    state = "HIGH";
  } else {
    state = "LOW";
  }
  digitalWrite(thing, mode);
}
